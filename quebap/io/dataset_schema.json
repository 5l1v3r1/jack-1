{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "quebap schema",
	"description": "The quebap dataset schema.",
	"type": "array",
	"items": {
		"type":"object",
		"properties": {
			"id": { "type": "string" },
			"support": {
				"type": "array",
				"items": {
					"id": "document",
					"type": "object",
					"properties": {
						"id": { "type": "string" },
						"text": { "type" : "string" },
						"tokens": { "type": "array" }
					},
					"required": ["text"]
				}
			},
			"questions": {
				"type": "array",
				"items": {
					"type":"object",
					"properties": {
						"question": {"type": "string" },
						"candidates": {
							"type":"array",
							"items": {
								"type":"object",
								"properties": {
									"id": { "type": "string" },
									"text": {"type":"string" },
									"label": {"type": "string" },
									"span": {
										"type": "array",
										"items": {
											"type":"integer"
										}
									}
								}
							}
						},
						"answers": {
							"type":"array",
							"items": {
								"type":"object",
								"properties": {
									"text":{"type":"string" },
									"label": {"type": "string" },
									"index": {"type": "integer" },
									"span": {
										"type": "array",
										"items": {"type":"integer"}
									}
								}
							}
						}
					}
				}
            }
        }
    }
}
